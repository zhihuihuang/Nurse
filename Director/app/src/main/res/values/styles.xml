<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"/>
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->    <style name="tv_deuce">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:minHeight">@dimen/y30</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">@dimen/x10</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/x15</item>
</style>

    <style name="tv_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:minHeight">@dimen/y30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <style name="tv_shot">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/x90</item>
        <item name="android:minHeight">@dimen/y30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <style name="tv_moderate">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/x180</item>
        <item name="android:minHeight">@dimen/y30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


</resources>
